{
  "name": "hotreload-using-parcel",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rimraf output dist out",
    "build": "spago build",
    "dev:img": "cpx asset/img/* dist/img",
    "dev:js": "parcel dev -p 3000 dev/index.html",
    "dev": "run-s dev:*",
    "bundle:img": "cpx asset/img/**/* dist/img",
    "bundle:ps": "spago bundle-app --to out/index.js",
    "bundle:js": "parcel build --no-source-maps asset/index.html",
    "bundle": "run-s bundle:*",
    "serve": "http-server -p 8000 dist"
  },
  "devDependencies": {
    "@tailwindcss/postcss7-compat": "^2.0.2",
    "autoprefixer": "^9",
    "cpx": "^1.5.0",
    "http-server": "^0.12.3",
    "npm-run-all": "^4.1.5",
    "parcel": "^1.12.4",
    "postcss": "^7",
    "purescript": "^0.13.8",
    "purty": "^6.3.0",
    "rimraf": "^3.0.2",
    "sass": "^1.32.5",
    "spago": "^0.19.0",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat"
  }
}
