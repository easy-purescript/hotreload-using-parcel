{
  "name": "hotreload-using-parcel",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rimraf output dist out",
    "build": "spago build",
    "dev:img": "cpx --watch asset/img/* dist/img",
    "dev:js": "parcel serve -p 3000 dev/index.html",
    "dev": "run-p dev:*",
    "bundle:img": "cpx asset/img/**/* dist/img",
    "bundle:ps": "spago bundle-app --to out/index.js",
    "bundle:js": "parcel build --no-source-maps asset/index.html",
    "bundle": "run-s bundle:*",
    "serve": "http-server -p 8000 dist"
  },
  "devDependencies": {
    "@parcel/transformer-sass": "2.0.0-beta.2",
    "autoprefixer": "^10.2.5",
    "cpx": "^1.5.0",
    "http-server": "^0.12.3",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0-beta.2",
    "postcss": "^8.1.0",
    "purescript": "^0.14.1",
    "purty": "^7.0.0",
    "rimraf": "^3.0.2",
    "spago": "^0.20.1",
    "tailwindcss": "^2.1.1"
  }
}
